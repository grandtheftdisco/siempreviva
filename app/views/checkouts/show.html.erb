<% post_checkout_image_url = Cloudinary::Utils.cloudinary_url(
  'helichrysum-landscape-01',
  transformation: { width: 800, crop: 'limit', fetch_format: 'auto', quality: 'auto' }
) %>

<div class="post-checkout-container">
  <div class="post-checkout-info">
    <% if @order.present? %>
      <div>
        <h1>Thanks for shopping with Siempreviva!</h1>

        <p class="pc-subtitle">
          we'll get started on your order right away.
        </p>
      </div>

      <div>
        <%= image_tag post_checkout_image_url, alt: 'field of flowers', class: 'formatted-image' %>
      </div>

      <div class="pc-order-details pt-5">
        <p class="pc-order-label">
          your order number is
        </p>

        <p class="pc-order-number">
            #<%= @order.id %>
        </p>
      </div>

      <p class="pc-receipt-notice">
        (please check your email for your receipt)
      </p>
    <% else %>
      <div>
        <h1>
          Your payment is<br>
          being processed!
        </h1>

        <p class="pc-subtitle">
          we'll email you when it's complete.
        </p>

        <div>
          <%= image_tag post_checkout_image_url, alt: 'field of flowers', class: 'formatted-image' %>
        </div>
      </div>
    <% end %>
  </div>
</div>