<p>Here is where you'll embed your Stripe elements!</p>
<p><%= number_to_currency(@session.amount_total / 100.0) %> due.</p>
<%= render partial: 'cart_items', locals: { session: @session } %>
<form id="payment-form" 
  data-stripe-publishable-key="<%= Rails.application
                                        .credentials
                                        .dig(:stripe, :publishable_key) %>"
  data-checkout-success-path="<%= checkout_success_url %>">
  <div id="payment-element">
    <!--Stripe.js injects Payment Element Here-->
  </div>
  <div id="address-element-shipping">
  </div>
  <div id="address-element-billing">
  </div>
  <button id="submit">
    <div class="spinner hidden" id="spinner"></div>
    <span id="button-text">Pay now</span>
  </button>
  <div id="payment-message" class="hidden"></div>
</form>

<script src="<%= asset_path 'checkout.js' %>"></script>