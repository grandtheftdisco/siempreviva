<h1>Cart Items</h1>
<div id="cart-items">
  <% @cart.cart_items.each do |item| %>
    <div class="line-item">
      <span><%= item.product.name %></span>
      <span><%= number_to_currency(item.price / 100.0) %></span>
    </div>
  <% end %>
</div>
<div>
  <p>Total:</p>
  <%= number_to_currency(@cart.total_amount / 100.0) %>
</div>