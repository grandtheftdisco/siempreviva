<%# Additional Product Images Grid (2x2) %>
<%# Usage: <%= render 'products/additional_images', product: @product %>

<% if product.images.count >= 4 %>
  <div class="grid grid-cols-2 gap-4 <%= local_assigns[:container_class] || 'max-w-lg mx-auto' %>">
    <% product.images[1..4].each_with_index do |image, index| %>
      <div class="bg-gray-100 rounded-lg flex items-center justify-center overflow-hidden <%= local_assigns[:image_height] || 'h-32' %>">
        <%= image_tag(image, alt: "#{product.name.titleize} - Image #{index + 2}", class: "w-full h-full object-cover") %>
      </div>
    <% end %>
  </div>
<% end %>
