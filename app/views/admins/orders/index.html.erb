<% if !@unfulfilled_orders %>
  <p>puts "No orders to fulfill at this time."</p>
<% else %>
  <h1 class="p-10 text-xl font-bold text-left">Orders to Fulfill</h1>
  <div class="grid grid-flow-row auto-rows-max gap-5 justify-self-center p-10">
    <% @unfulfilled_orders.each do |order| %>
      <div>
        <%= render order %>
        <br/>
      </div>
    <% end %>
  </div>
  <div>
    <% if @page > 1 %>
      <%= link_to "<< Previous Page",
        admins_orders_path(page: @page - 1),
        class: 'font-bold' %>
    <% end %>
    |
    <% if (@page + 1) * @orders_per_page < @total_unfulfilled_orders %> 
    <%= link_to "Next Page >>",
      admins_orders_path(page: @page + 1),
      class: 'font-bold' %>
    <% end %>
  </div>
<% end %>

<div class="flex flex-col items-center">
  <%= link_to "View All Orders", archive_admins_orders_path %>
</div>